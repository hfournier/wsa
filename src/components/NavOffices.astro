---
import { getCollection } from "astro:content";

const offices = await getCollection("offices");
---

<nav class="">
  <ul class="flex flex-col">
    {
      offices.map(({ data }) => (
        <li class="grid grid-cols-[85px_108px_minmax(0,_1fr)] md:grid-cols-3 gap-2 md:gap-4">
          <a
            class="hover:text-brand font-gotham-bold text-xs md:text-sm lg:text-base"
            href={data.link}>
            {data.name}
          </a>
          <a
            class="hover:text-brand font-gotham-light text-xs md:text-sm lg:text-base"
            href={`tel:${data.phone}`}>
            {data.phone}
          </a>
          <a
            class="hover:text-brand font-gotham-light text-xs md:text-sm lg:text-base"
            href={`mailto:${data.email}`}>
            {data.email}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
